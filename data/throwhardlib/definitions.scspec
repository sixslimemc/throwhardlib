
pdata\PlayerData :< {
    throwhardlib: {
        last_tick: PosRot
    }
}

PosRot := {
    position: spaceVector
    rotation: rotation
}
ForceSpec := {
    base: double
    transfer_player_motion: bool
    fling? {
        multiplier: double
        max? double
    }
    variation? {
        rotation? {
            horizontal: FloatRange
            vertical: FloatRange
        }
        magnitude? FloatRange
    }
    max? double
}

FloatRange := {
    min: float
    max: float
}